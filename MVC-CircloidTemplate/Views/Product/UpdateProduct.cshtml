
@{
    ViewBag.Title = "Ürün Güncelle";
}

@using MVC_CircloidTemplate.Models

@model Product

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Ürün @ViewBag.productFrom Sayfası
                </div>
                <div class="block-controls">
                    <a href="/Product/Index"><span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span></a>
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <form action="/Product/UpdateProduct" method="post" role="form">
                        <input type="hidden" class="form-control" id="exampleInputEmail1" name="ProductID" value="@Model.ProductID">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Ürün Adı: </label>
                            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Ürün adı giriniz" name="ProductName" value="@Model.ProductName">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Fiyat</label>
                            <input type="number" class="form-control" id="exampleInputPassword1" placeholder="Fiyat giriniz" name="UnitPrice" value="@Model.UnitPrice">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Stok</label>
                            <input type="number" class="form-control" id="exampleInputPassword1" placeholder="Stok miktarı giriniz" name="UnitsInStock" value="@Model.UnitsInStock">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Kategori</label>
                            <select class="form-control" name="CategoryID">
                                @foreach (Category ctg in ViewBag.catList)
                                {
                                    if (ctg.CategoryID == Model.CategoryID)
                                    {
                                        <option value="@ctg.CategoryID" selected>@ctg.CategoryName</option>
                                    }
                                    else
                                    {
                                        <option value="@ctg.CategoryID">@ctg.CategoryName</option>
                                    }

                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Tedarikçi</label>
                            <select class="form-control" name="SupplierID">
                                @foreach (Supplier spl in ViewBag.supList)
                                {
                                    if (true)
                                    {
                                        <option value="@spl.SupplierID" selected>@spl.CompanyName</option>
                                    }
                                    else
                                    {
                                        <option value="@spl.SupplierID">@spl.CompanyName</option>
                                    }

                                }
                            </select>
                        </div>
                        @if(ViewBag.productFrom == "Güncelleme"){
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                        }

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



